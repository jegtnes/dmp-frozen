<%= form_tag("/journey", method: "get", class: 'grid form-fields form--search', id: 'journeyForm') do %>
  <fieldset class="grid__item search-stations">
    <div class="field">
      <label for="dep">From:</label>
      <%= text_field_tag(:dep, '', required: true, class: 'text-input text-input--wide') %>
      <%= hidden_field_tag 'dep-hidden' %>
    </div>

    <div class="field">
      <label for="arr">To:</label>
      <%= text_field_tag(:arr, '', required: true, class: 'text-input text-input--wide') %>
      <%= hidden_field_tag 'arr-hidden' %>
    </div>
  </fieldset><!--

  --><fieldset class="grid__item search-time">
    <div class="field">
      <label for="date">Date:</label>
      <%= date_field_tag :date, @currentDate, required: true, class: 'text-input text-input--narrow' %>
    </div>

    <div class="field field--depart">
      <%= select_tag :dep_arr, options_for_select([['Depart at', 'dep'], ['Arrive at', 'arr']]) %>
      <%= time_field_tag :time, @currentTime, required: true, class: 'text-input text-input--narrow' %>
    </div>
  </fieldset>
    <%= button_tag "Search", type: :submit, class: "btn btn--beta btn--hollow btn--cta" %>
<% end %>

